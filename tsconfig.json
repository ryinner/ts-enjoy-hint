{
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "node",
        "removeComments": true,
        "esModuleInterop": true,
        "strict": true,
        "isolatedModules": true,
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "dist",
        "rootDir": "src",
    },
    "exclude": ["node_modules", "dist"]
}